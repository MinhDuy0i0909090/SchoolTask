{
  "builds": [
    {
      "src": "FE/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "FE/dist" }
    },
    {
      "src": "BE/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/BE/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/FE/$1"
    }
  ]
}
